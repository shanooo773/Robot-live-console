# Example environment configuration for VPS deployment
# Copy this to .env and modify the values for your VPS

# Database Configuration
DATABASE_URL=sqlite:///robot_console.db

# JWT Secret Key for Authentication (change this for production!)
SECRET_KEY=your-secret-key-here-change-for-production

# CORS Origins for VPS deployment
# Replace with your actual VPS domain/IP
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://172.104.207.139,http://your-domain.com,http://your-domain.com:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000

# VPS Configuration
VPS_URL=http://172.104.207.139

# Video Storage Configuration
VIDEO_STORAGE_PATH=./videos
MAX_VIDEO_SIZE_MB=100

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Demo User Credentials (optional)
DEMO_USER_EMAIL=demo@user.com
DEMO_USER_PASSWORD=password
DEMO_ADMIN_EMAIL=admin@demo.com
DEMO_ADMIN_PASSWORD=password

# Environment
ENVIRONMENT=production