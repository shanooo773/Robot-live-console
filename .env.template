# Environment Configuration Template
# Copy this file to .env and modify values as needed

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration  
FRONTEND_PORT=5173
FRONTEND_HOST=localhost

# CORS Configuration for VPS deployment
# Add your VPS domain/IP to allow cross-origin requests
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Example for VPS: CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://your-vps-domain.com,http://your-vps-ip:3000

# Docker Configuration
DOCKER_IMAGE_NAME=robot-simulation
DOCKER_TAG=latest
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1.0

# ROS Configuration
ROS_DISTRO=noetic
GAZEBO_VERSION=11

# Video Configuration
VIDEO_DURATION=10
VIDEO_FRAMERATE=30
VIDEO_RESOLUTION=1024x768

# Security Configuration
MAX_EXECUTION_TIME=60
DISABLE_NETWORKING=true
ENABLE_GPU=false

# Storage Configuration
VIDEOS_DIR=./backend/videos
TEMP_DIR=./backend/temp

# Optional: DockerHub credentials for pulling base images
# DOCKER_USERNAME=your_username
# DOCKER_PASSWORD=your_password