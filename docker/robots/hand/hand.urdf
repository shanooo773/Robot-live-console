<?xml version="1.0"?>
<robot name="simple_hand">
  
  <!-- Palm Link -->
  <link name="palm_link">
    <visual>
      <geometry>
        <box size="0.08 0.12 0.03"/>
      </geometry>
      <material name="skin">
        <color rgba="0.9 0.7 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.12 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Finger 1 -->
  <link name="finger1_link">
    <visual>
      <geometry>
        <box size="0.02 0.08 0.015"/>
      </geometry>
      <material name="skin">
        <color rgba="0.9 0.7 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.08 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Finger 2 -->
  <link name="finger2_link">
    <visual>
      <geometry>
        <box size="0.02 0.08 0.015"/>
      </geometry>
      <material name="skin">
        <color rgba="0.9 0.7 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.08 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Thumb -->
  <link name="thumb_link">
    <visual>
      <geometry>
        <box size="0.015 0.06 0.015"/>
      </geometry>
      <material name="skin">
        <color rgba="0.9 0.7 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.015 0.06 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.03"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Finger 1 Joint -->
  <joint name="finger1_joint" type="revolute">
    <parent link="palm_link"/>
    <child link="finger1_link"/>
    <origin xyz="0.025 0.04 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1.57" effort="1" velocity="1"/>
  </joint>

  <!-- Finger 2 Joint -->
  <joint name="finger2_joint" type="revolute">
    <parent link="palm_link"/>
    <child link="finger2_link"/>
    <origin xyz="-0.025 0.04 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1.57" effort="1" velocity="1"/>
  </joint>

  <!-- Thumb Joint -->
  <joint name="thumb_joint" type="revolute">
    <parent link="palm_link"/>
    <child link="thumb_link"/>
    <origin xyz="0 -0.04 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="1" velocity="1"/>
  </joint>

  <!-- Gazebo plugin for control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/robot_hand</robotNamespace>
    </plugin>
  </gazebo>

</robot>